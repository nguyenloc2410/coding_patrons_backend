  <body>
    <div class="container">
      <div class="row">
        <div class="main_form_container_1 col-6"></div>
        <div class="main_form_container_2 col-6">
          <h1>Create a new User</h1>
          <form
            class="form"
            action="/user/handleUserRegister_Confirm"
            method="post"
            oninput='confirm_pass.setCustomValidity(confirm_pass.value != pass.value ? "Passwords do not match." : "")'
          >
            <div class="mb-3 mt-3 col-7">
              <label for="email" class="form-label">Email:</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="Enter email"
                name="email"
                required
              />
            </div>
            <div class="mb-3 col-7">
              <label for="pwd" class="form-label">Password:</label>
              <input
                type="password"
                class="form-control"
                id="pwd"
                placeholder="Enter password"
                name="pass"
                required
              />
            </div>
            <div class="mb-3 col-7">
              <label for="pwd" class="form-label">Confirm Password:</label>
              <input
                type="password"
                class="form-control"
                id="pwd"
                placeholder="Enter confirm password"
                name="confirm_pass"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary col-7">Create</button>
          </form>
        </div>
      </div>
      <div class="row d-flex justify-content-center mt-5">
        <div class="table_container col-7">
          <table class="table table-hover table-bordered">
            <h3>Table Users</h3>
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Email</th>
                <th scope="col">UserName</th>
                <th scope="col">Options</th>
              </tr>
            </thead>
            <tbody>
              <%userList.forEach((item,index)=>{%>
              <tr>
                <td><%=index+1%></td>
                <td><%=item.email%></td>
                <td><%=item.username%></td>
                <td class="d-flex justify-content-around">
                  <a class="btn btn-warning" href="/user/update/<%=item.id%>"
                    >Edit
                  </a>
                  <form action="/user/delete/<%=item.id%>" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
              <% }); %>
