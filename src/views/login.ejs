<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HomePage</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="main_form_container_1 col-6"></div>
        <div class="main_form_container_2 col-6">
          <form class="form" action="/handleLogin_Confirm" method="post">
            <div class="mb-3 mt-3 col-7">
              <label for="email" class="form-label">Email:</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="Enter email"
                name="email"
                required
              />
            </div>
            <div class="mb-3 col-7">
              <label for="pwd" class="form-label">Password:</label>
              <input
                type="password"
                class="form-control"
                id="pwd"
                placeholder="Enter password"
                name="pass"
                required
              />
            </div>
            <div class="form-check mb-3 col-7">
              <label class="form-check-label">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="remember"
                />
                Remember me
              </label>
            </div>
            <div class="form_btn col-7 d-flex justify-content-around">
              <button type="submit" class="btn btn-primary col-5">
                Submit
              </button>
              <a href="/user" class="btn btn-primary col-5">Create</a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
